# LATAMCOINS - Variables de Entorno
# Copia este archivo como .env.local y configura tus valores

# ===========================================
# CONFIGURACIÓN DE LA APLICACIÓN
# ===========================================

# URL base de la aplicación
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Entorno de desarrollo (development, production)
NODE_ENV=development

# ===========================================
# APIS DE CRYPTOCURRENCY
# ===========================================

# CoinGecko API (para precios y datos de mercado)
NEXT_PUBLIC_COINGECKO_API_URL=https://api.coingecko.com/api/v3
NEXT_PUBLIC_COINGECKO_API_KEY=your_coingecko_api_key_here

# CoinMarketCap API (alternativa para datos de mercado)
NEXT_PUBLIC_CMC_API_URL=https://pro-api.coinmarketcap.com/v1
NEXT_PUBLIC_CMC_API_KEY=your_coinmarketcap_api_key_here

# ===========================================
# SOLANA BLOCKCHAIN
# ===========================================

# RPC de Solana (mainnet, testnet, devnet)
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.mainnet-beta.solana.com
NEXT_PUBLIC_SOLANA_NETWORK=mainnet-beta

# RPC alternativo para fallback
NEXT_PUBLIC_SOLANA_RPC_URL_BACKUP=https://solana-api.projectserum.com

# ===========================================
# PUMP.FUN INTEGRATION
# ===========================================

# API de Pump.fun para tokens
NEXT_PUBLIC_PUMP_FUN_API_URL=https://frontend-api.pump.fun
NEXT_PUBLIC_PUMP_FUN_API_KEY=your_pump_fun_api_key_here

# ===========================================
# WEBSOCKET CONNECTIONS
# ===========================================

# WebSocket para datos en tiempo real
NEXT_PUBLIC_WEBSOCKET_URL=wss://stream.binance.com:9443/ws
NEXT_PUBLIC_WEBSOCKET_RECONNECT_INTERVAL=5000

# ===========================================
# ANALYTICS & MONITORING
# ===========================================

# Google Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Vercel Analytics
NEXT_PUBLIC_VERCEL_ANALYTICS_ID=your_vercel_analytics_id

# Sentry para error tracking
NEXT_PUBLIC_SENTRY_DSN=your_sentry_dsn_here

# ===========================================
# FEATURES FLAGS
# ===========================================

# Habilitar/deshabilitar características
NEXT_PUBLIC_ENABLE_REAL_TIME_DATA=true
NEXT_PUBLIC_ENABLE_WEBSOCKET=true
NEXT_PUBLIC_ENABLE_ANALYTICS=true
NEXT_PUBLIC_ENABLE_PWA=true

# ===========================================
# CONFIGURACIÓN DE CACHE
# ===========================================

# Tiempo de cache para datos (en segundos)
NEXT_PUBLIC_CACHE_TTL=300
NEXT_PUBLIC_PRICE_CACHE_TTL=60

# ===========================================
# CONFIGURACIÓN DE UI
# ===========================================

# Tema por defecto
NEXT_PUBLIC_DEFAULT_THEME=dark

# Idioma por defecto
NEXT_PUBLIC_DEFAULT_LOCALE=es

# ===========================================
# CONFIGURACIÓN DE DESARROLLO
# ===========================================

# Debug mode
NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_VERBOSE_LOGGING=false

# ===========================================
# CONFIGURACIÓN DE PRODUCCIÓN
# ===========================================

# URL de producción
NEXT_PUBLIC_PRODUCTION_URL=https://latamcoins.vercel.app

# Configuración de CDN
NEXT_PUBLIC_CDN_URL=https://cdn.latamcoins.com

# ===========================================
# SEGURIDAD
# ===========================================

# Rate limiting
NEXT_PUBLIC_RATE_LIMIT_REQUESTS=100
NEXT_PUBLIC_RATE_LIMIT_WINDOW=60000

# CORS origins permitidos
NEXT_PUBLIC_ALLOWED_ORIGINS=http://localhost:3000,https://latamcoins.vercel.app
